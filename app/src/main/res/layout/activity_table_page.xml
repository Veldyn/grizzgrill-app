<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TablePage"
    android:background="@color/blackish">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
        android:id="@+id/HeaderEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="HeaderEmployee"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp" />

        <Spinner
            android:id="@+id/EmployeeSelect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HeaderEmployee"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/yellow" />

        <TextView
            android:id="@+id/tablesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tables:"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_below="@+id/EmployeeSelect"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"/>

    <ScrollView
        android:id="@+id/ListOfOrders"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:padding="5dp"
        android:fillViewport="true"
        android:layout_below="@+id/tablesHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tableOneBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rect"
                android:text="Hello World 1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="25dp" />

            <TextView
                android:id="@+id/tableTwoBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rect"
                android:text="Hello World 2"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="25dp" />

            <TextView
                android:id="@+id/tableThreeBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rect"
                android:text="Hello World 3"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="25dp" />

            <TextView
                android:id="@+id/tableFourBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rect"
                android:text="Hello World 4"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="25dp" />

        </LinearLayout>
    </ScrollView>

    </RelativeLayout>

</LinearLayout>