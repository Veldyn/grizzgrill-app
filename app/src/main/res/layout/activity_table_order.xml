<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableOrder"
    android:background="@color/blackish">

    <TextView
        android:id="@+id/TableSelectHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Table Selected:"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/OrdersHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="Orders:"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TableText" />

    <TextView
        android:id="@+id/waitressHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="Assigned Waitress:"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/TableSelectHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Table1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/TableSelectHeader"
        app:layout_constraintTop_toBottomOf="@+id/TableSelectHeader" />

    <TextView
        android:id="@+id/WaiterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Andersen"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/waitressHeader"
        app:layout_constraintTop_toBottomOf="@+id/waitressHeader" />

    <ScrollView
        android:id="@+id/OrdersOnTable"
        android:layout_width="377dp"
        android:layout_height="205dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrdersHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:text="add Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/CatagorySelect"
        android:layout_width="339dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrdersOnTable" />

    <ScrollView
        android:id="@+id/newItemSelect"
        android:layout_width="362dp"
        android:layout_height="259dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CatagorySelect">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>